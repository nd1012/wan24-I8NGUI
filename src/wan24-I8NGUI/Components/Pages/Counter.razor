@page "/counter"

<FluentLabel Typo="Typography.H1">Counter</FluentLabel>

<FluentLabel Typo="Typography.Body">Current count: @currentCount</FluentLabel>

<FluentButton @onclick="IncrementCount">Click me</FluentButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        if (currentCount == 3)
        {
            ShowWarning("Clicked 3 times");
        }
        else
        {
            ShowInfo($"Click count {currentCount}");
        }
    }
}
